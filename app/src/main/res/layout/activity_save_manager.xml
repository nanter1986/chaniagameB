<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="chaniagame.nanter1986.com.chaniagame.SaveManager">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3">

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="EXIT"
                android:id="@+id/bsExit"
                android:layout_weight="1"
                android:background="#e710b013"
                android:textSize="25dp"
                android:gravity="center" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Delete Save File"
                android:id="@+id/bsDelete"
                android:layout_weight="2"
                android:textSize="25dp"
                android:background="#d8df4a4a"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="New Text"
                android:id="@+id/tSave"
                android:layout_weight="1"
                android:textColor="#31ed66"
                android:textSize="20dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="2"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="----"
                    android:id="@+id/bsNo"
                    android:layout_weight="1"
                    android:background="#d2dfd547"
                    android:textSize="25dp"
                    android:gravity="center" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="----"
                    android:id="@+id/bsYes"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="#e0c22eb3"
                    android:textSize="25dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
